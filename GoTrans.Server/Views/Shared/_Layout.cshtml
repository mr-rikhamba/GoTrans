<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/jquery.signalR-2.1.0.js"></script>
        <script src="~/signalr/hubs"></script>
     
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <a href="~/">ASP.NET Web API</a>
                    </p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        @RenderBody()
        <input id="message" type="text" />
        <input type="button" id="send" />
        

    </body>
</html>
 <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
<script>
    $(function () {
        var connection = $.hubConnection();
        var locationsHubProxy = connection.createHubProxy('locationsHub');

        var map;
        var mapCentre;
        var mapOptions;
        var panoramaOptions;
        var panorama;


        locationsHubProxy.on('hello', function (message) {
            console.log(message);
        });
        locationsHubProxy.on('updateCoordinates', function (lat, lon) {
            console.log(lat + ' ' + lon);
            updateMap(lat, lon);
        });
        connection.start().done(function () {
            // Wire up Send button to call NewContosoChatMessage on the server.
            $('#send').click(function () {
                //locationsHubProxy.invoke('hello', locationsHubProxy.connection.id, $('#message').val());
                //$('#message').val('').focus();
                updateMap(42.345573, -71.098326);
            });
        });
        $.connection.hub.disconnected(function () {
            setTimeout(function () {
                $.connection.hub.start();
            }, 5000); // Restart connection after 5 seconds.
        });

        function updateMap(lat, lon) {
            mapCentre = new google.maps.LatLng(lat, lon);
            mapOptions = {
                center: mapCentre,
                zoom: 14
            };
            map.setCenter(mapCentre);
            map.streetView.setPosition(mapCentre);
        }
        function initialize() {
            mapCentre = new google.maps.LatLng(-23.8333, 30.1667);
            mapOptions = {
                center: mapCentre,
                zoom: 14
            };
            map = new google.maps.Map(
                document.getElementById('map-canvas'), mapOptions);
            panoramaOptions = {
                position: mapCentre,
                pov: {
                    heading: 34,
                    pitch: 10
                }
            };
            panorama = new google.maps.StreetViewPanorama(document.getElementById('pano'), panoramaOptions);
            map.setStreetView(panorama);
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    })
</script>
